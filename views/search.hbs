{{> header }}
<h2 class="text-xl text-center mt-5"> Search Note </h2>
<form action="/search" method="post"  class="flex flex-col gap-y-5 justify-center items-center w-full mt-5">
    <input type="text" name="id" class="border p-2 rounded-md outline-none" placeholder="Enter ID"/>
    <input type="submit" value="Search"  class="bg-purple-700 hover:bg-purple-500 text-white p-3 rounded-md"/>
</form>
<div class="w-1/3 mx-auto mt-10">
    <div class="border p-3 rounded-md hover:drop-shadow-xl">
    <div class="font-bold text-lg text-purple-700 text-[#333]">{{data.title}}</div>
    <div class="text-gray text-sm">{{data.description}}</div>
</div>
{{> footer}}